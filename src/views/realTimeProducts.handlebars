<div>
  <form>
    <label for='title'>Titulo:</label>
    <input type='text' id='title' name='title' placeholder='Titulo' required />
    <label for='description'>Descripción:</label>
    <input
      id='description'
      name='description'
      placeholder='Descripcion'
      required
    />
    <label for='code'>Codigo:</label>
    <input type='text' id='code' name='code' placeholder='Codigo' required />
    <label for='price'>Precio:</label>
    <input
      type='number'
      id='price'
      name='price'
      placeholder='Precio'
      required
    />
    <label for='category'>Categoría:</label>
    <input
      type='text'
      id='category'
      name='category'
      placeholder='Categoria'
      required
    />
    <label for='stock'>Stock:</label>
    <input type='number' id='stock' name='stock' placeholder='Stock' required />
    <label for='thumbnail'>URL de la Imagen:</label>
    <input type='url' id='thumbnail' name='thumbnail' placeholder='Imagen' />

    <button id='add-product'>Enviar</button>
  </form>

  <div>
    <h1>Lista de productos actualizada</h1>
    <ul>
      {{#each products}}
        <li>
          <strong>Titulo: </strong>{{this.title}}<br />
          <strong>Precio: </strong>{{this.price}}<br />
          <strong>Descripcion: </strong>{{this.description}}<br />
          <strong>Categoria: </strong>{{this.category}}<br />
          {{#if this.image}}
            <img src='{{this.image}}' alt='{{this.title}}' />
          {{/if}}
        </li>
        <br />
      {{/each}}
    </ul>
  </div>

</div>
<script src='/socket.io/socket.io.js'></script>
<script src='/js/index.js'></script>
  <div class='flex justify-between bg-gray-800 p-4 text-white'>
    <div>
      <a href='/views/profile'>Perfil</a>
    </div>
    <div>
      <a href='/views/products'>Productos</a>
    </div>
    <div>
      <a href='/views/cart'>
        <i class='fas fa-shopping-cart'></i>
